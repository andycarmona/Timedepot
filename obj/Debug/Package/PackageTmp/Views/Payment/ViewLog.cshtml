@model TimelyDepotMVC.Models.Admin.Payments

<div class="darkerline boxM10 boxP10">

    <div style="padding:5px;">
        <div>
            <div class="cf boxMb10">
                <div class="cf left boxMR10" style="width: 250px;">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.PaymentNo):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.PaymentNo)
                    </div>
                </div>
                <div class="cf left">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.ReferenceNo):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.ReferenceNo)
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="cf boxMb10">
                <div class="cf left boxMR10" style="width: 250px;">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.PaymentType):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.PaymentType)
                    </div>
                </div>
                <div class="cf">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.CreditCardNumber):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.CreditCardNumber)
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="cf boxMb10">
                <div class="cf left boxMR10" style="width: 250px;">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.Amount):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.Amount)
                    </div>
                </div>
                <div class="cf">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.PaymentDate):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.PaymentDate)
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="cf boxMb10">
                <div class="cf left boxMR10" style="width: 250px;">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.CustomerNo):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.CustomerNo)
                    </div>
                </div>
                <div class="cf">
                    <div class="display-label left boxMR10">
                        @Html.DisplayNameFor(model => model.SalesOrderNo):
                    </div>
                    <div class="display-field left">
                        @Html.DisplayFor(model => model.SalesOrderNo)
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="cf boxMb10">
                <div class="cf">
                    <div class="display-label left boxMR10">
                        Invoice&nbsp;No:
                    </div>
                    <div class="display-field left">
                        @ViewBag.InvoiceNo
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div>
        <div class="display-label boxMb10" style="width: 100px; margin: 0px auto;">
            @Html.DisplayNameFor(model => model.PayLog)
        </div>
        <div class="boxM10" style="padding: 15px; border: solid 1px blue;">
            @{
                System.Xml.XmlNodeList childs = null;
            }
            @if (ViewBag.ElChildsList != null)
            {
                childs = ViewBag.ElChildsList;
        
                <div style="margin-bottom: 15px; border: solid 0px blue;">

                    @foreach (System.Xml.XmlNode item in childs)
                    {
                        if (!string.IsNullOrEmpty(item.InnerText))
                        {
                        <div class="cf">
                            <div class="left" style="width: 180px; margin-right: 15px;">@item.Name&nbsp;:</div>
                            <div class="left">@item.InnerText</div>
                        </div>                    
                        }
                    }
                </div>
            }
        </div>
    </div>



</div>
<div style="width: 200px; margin: 0px auto;">
    <input id="btnClose" class="btn btn-default" type="button" value="Close" />
</div>
