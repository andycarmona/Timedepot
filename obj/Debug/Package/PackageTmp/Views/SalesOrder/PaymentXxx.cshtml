                <input id="PaymentTypeHlpId" type="text" />
            </div>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PaymentType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PaymentType)
