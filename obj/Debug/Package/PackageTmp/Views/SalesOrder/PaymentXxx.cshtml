        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SalesOrderNo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SalesOrderNo)
            @Html.ValidationMessageFor(model => model.SalesOrderNo)
        </div>
        <div class="editor-field">
            @Html.DropDownList("PaymentTypeHlpId", (IEnumerable<SelectListItem>)ViewBag.CardsList, "Select Payment Type", new { id = "PaymentTypeHlpIdselectorId" })
