@using PagedList.Mvc;   @*//import this so we get our HTML Helper*@
@using PagedList;       @*//import this so we can cast our list to IPagedList (only necessary because ViewBag is dynamic)*@
@model IEnumerable<TimelyDepotMVC.Models.Admin.PackageRateLog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="webgrid">
    <tr class="webgrid-header">
        <th></th>
        <th>Id</th>
        <th>
            @Html.DisplayNameFor(model => model.DateSubmit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boxes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemsLastBox)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullBoxWeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartialBoxWeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueperFullBox)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueperPartialBox)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseHeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseLenght)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseWidth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseWeight)
        </th>
    </tr>
    @{

        int nRow = 0;
        int nMod = 0;
        string szClass = "";
    }

    @foreach (var item in Model)
    {
        nRow++;
        nMod = (nRow % 2);
        if (nMod == 0)
        {
            szClass = "webgrid-alternating-row";
        }
        else
        {
            szClass = "webgrid-row-style";
        }
        <tr class="@szClass">
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Index", "PackageRateLogDetailsAdmin", new { id = item.Id }, null) |
                @Html.ActionLink("Parameters", "Index", "PackageRateLogParametersAdmin", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSubmit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Boxes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemsLastBox)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullBoxWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartialBoxWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueperFullBox)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueperPartialBox)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaseHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaseLenght)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaseWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaseWeight)
            </td>
        </tr>
    }
    <tr>
        <td colspan="17">
            <!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
            @Html.PagedListPager((IPagedList)ViewBag.OnePageOfData, page => Url.Action("Index", new { page }))

        </td>
    </tr>

</table>
