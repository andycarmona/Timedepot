@using PagedList.Mvc;   @*//import this so we get our HTML Helper*@
@using PagedList;       @*//import this so we can cast our list to IPagedList (only necessary because ViewBag is dynamic)*@
@model IEnumerable<TimelyDepotMVC.Models.Admin.DIAL>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DIAL</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.DialPic)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DialID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DialID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DialID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DialID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DialPic)
            </td>
        </tr>
    }
        <tr>
        <td colspan="3">
            <!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
            @Html.PagedListPager((IPagedList)ViewBag.OnePageOfData, page => Url.Action("Index", new { page }))

        </td>
    </tr>

</table>
