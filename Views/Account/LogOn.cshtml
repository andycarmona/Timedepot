@model TimelyDepotMVC.Models.LogOnModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div style="width: 400px; margin: 0 auto;">
        <fieldset class="darkerline" style="margin-top: 50px; margin-bottom: 50px;">
            <legend>Logintt</legend>
            <div class="cf" style="margin: 5px;">
                <div class="left" style="margin-right: 5px; padding-top: 8px;">@Html.LabelFor(m => m.UserName)</div>
                <div class="viosinput180">@Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="cf" style="margin: 5px;">
                <div class="left" style="margin-right: 12px; padding-top: 8px;">@Html.LabelFor(m => m.Password)</div>
                <div class="viosinput180">@Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div style="display: none;">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </div>
            <div style="width: 42px; margin: 0 auto;">
                <input id="btSubmit" type="submit" value="Login" />
            </div>
        </fieldset>
    </div>

}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript">
        jQuery(Document).ready(initializeLogin);

        function initializeLogin() {

            //Set the buttons
            jQuery("#btSubmit").button();

            //Set layout
            //jQuery("#Password").css("margin-left", "41px");
        }
    </script>
}
