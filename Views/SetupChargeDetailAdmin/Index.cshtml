@using PagedList.Mvc;   @*//import this so we get our HTML Helper*@
@using PagedList;       @*//import this so we can cast our list to IPagedList (only necessary because ViewBag is dynamic)*@
@model IEnumerable<TimelyDepotMVC.Models.Admin.SetupChargeDetail>

@{
    ViewBag.Title = "Setup Charge Detail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>Id</th>
        <th>
            @Html.DisplayNameFor(model => model.SetUpCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RunCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.itemid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReSetupCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReSetupChargeDiscountCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RunChargeDiscountCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SetupChargeDiscountCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstSetupFree)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SetUpCharge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RunCharge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.itemid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReSetupCharge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReSetupChargeDiscountCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RunChargeDiscountCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SetupChargeDiscountCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstSetupFree)
        </td>
    </tr>
}
    <tr>
        <td colspan="5">
            <!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
            @Html.PagedListPager((IPagedList)ViewBag.OnePageOfData, page => Url.Action("Index", new { page }))

        </td>
    </tr>

</table>
